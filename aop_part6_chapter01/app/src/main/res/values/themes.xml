<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aop_part6_chapter01" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="toolbarStyle">@style/Widget.AopPart6Chapter01.Toolbar</item>
        <item name="toolbarWithArrowButtonStyle">@style/Widget.AopPart6Chapter01.Toolbar.WithArrow</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.Aop_part6_chapter01">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:background">@null</item>
    </style>
</resources>